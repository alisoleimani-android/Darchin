<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="co.tinab.darchin.controller.fragment.store.ProductDetailFragment">

    <include
        android:id="@+id/container_toolbar"
        layout="@layout/toolbar_simple_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_add"
        android:layout_below="@id/container_toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/container_info"
                android:layout_below="@id/img"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <co.tinab.darchin.view.toolbox.TextViewLight
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="@string/name_of_product"
                        android:textSize="@dimen/average"
                        android:textColor="@color/primaryText"
                        android:textAlignment="viewStart"
                        android:textDirection="locale" />
                    <co.tinab.darchin.view.toolbox.TextViewNormal
                        android:id="@+id/txt_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:textSize="@dimen/semi_large"
                        android:textColor="@color/primaryText"
                        android:textAlignment="viewEnd"
                        android:textDirection="locale" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <co.tinab.darchin.view.toolbox.TextViewLight
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="@string/price_of_product"
                        android:textSize="@dimen/average"
                        android:textColor="@color/primaryText"
                        android:textAlignment="viewStart"
                        android:textDirection="locale" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="0.7"
                        android:gravity="end">
                        <co.tinab.darchin.view.toolbox.MoneyTextView
                            android:id="@+id/txt_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:textColor="@color/primaryText"
                            android:textSize="@dimen/average"
                            android:background="@drawable/strike_through_bk"
                            android:layout_gravity="start|center_vertical"/>
                        <co.tinab.darchin.view.toolbox.MoneyTextView
                            android:id="@+id/txt_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:layout_margin="3dp"
                            android:textColor="@color/colorAccent"
                            android:textStyle="bold"
                            android:textSize="@dimen/average"
                            android:layout_gravity="end|center_vertical"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <co.tinab.darchin.view.toolbox.TextViewLight
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="@string/score_of_product"
                        android:textSize="@dimen/average"
                        android:textColor="@color/primaryText"
                        android:textAlignment="viewStart"
                        android:textDirection="locale" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="0.7"
                        android:gravity="end">
                        <RatingBar
                            android:id="@+id/rating_bar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:max="5"
                            android:isIndicator="true"
                            android:theme="@style/RatingBar"
                            style="?android:attr/ratingBarStyleSmall" />
                        <co.tinab.darchin.view.toolbox.TextViewNormal
                            android:id="@+id/txt_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/mini"
                            android:background="@drawable/score_red_bk"
                            android:textDirection="ltr"
                            android:minWidth="40dp"
                            android:minHeight="10dp"
                            android:padding="2dp"
                            android:layout_marginStart="8dp"
                            android:gravity="center" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <co.tinab.darchin.view.toolbox.TextViewLight
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="@string/description_of_product"
                        android:textSize="@dimen/average"
                        android:textColor="@color/primaryText"
                        android:textAlignment="viewStart"
                        android:textDirection="locale" />
                    <co.tinab.darchin.view.toolbox.TextViewLight
                        android:id="@+id/txt_desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:textSize="@dimen/average"
                        android:textColor="@color/primaryText"
                        android:textAlignment="viewEnd"
                        android:textDirection="locale" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_pictures"
                android:layout_below="@id/container_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp">
                <co.tinab.darchin.view.toolbox.TextViewNormal
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="@string/pictures_sent_by_users"
                    style="@style/TitleOfListStyle"
                    android:textDirection="locale"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"/>
                <co.tinab.darchin.view.toolbox.MyRecyclerView
                    android:id="@+id/recycler_view_user_pictures"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:orientation="horizontal"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_below="@id/container_pictures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp">
                <co.tinab.darchin.view.toolbox.TextViewNormal
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/comments_about_this_product"
                    style="@style/TitleOfListStyle"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"/>
                <co.tinab.darchin.view.toolbox.MyRecyclerView
                    android:id="@+id/recycler_view_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:isNestedScrollingEnable="false"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <co.tinab.darchin.view.toolbox.ButtonNormal
        android:id="@+id/btn_add"
        style="@style/MyButton"
        android:layout_alignParentBottom="true"
        android:text="@string/add_to_cart"/>

</RelativeLayout>
