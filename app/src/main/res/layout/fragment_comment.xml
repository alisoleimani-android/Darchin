<android.support.v4.widget.NestedScrollView
    android:id="@+id/nested_scroll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.tinab.darchin.controller.fragment.store.CommentFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/container_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">
            <android.support.constraint.ConstraintLayout
                android:id="@+id/container_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="16dp">
                <co.tinab.darchin.view.toolbox.TextViewNormal
                    android:id="@+id/txt_score"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/average"
                    android:background="@drawable/score_red_bk"
                    android:textDirection="ltr"
                    android:minWidth="40dp"
                    android:minHeight="20dp"
                    android:gravity="center"
                    android:paddingTop="3dp"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"/>
                <RatingBar
                    android:id="@+id/rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/txt_score"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/txt_count"
                    android:numStars="5"
                    android:max="5"
                    android:isIndicator="true"
                    android:theme="@style/RatingBar"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_marginStart="8dp"/>
                <co.tinab.darchin.view.toolbox.TextViewLight
                    android:id="@+id/txt_count"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/average"
                    android:textColor="@color/secondaryText"
                    android:maxWidth="120dp"
                    android:maxLines="2"
                    android:gravity="center"
                    android:textDirection="locale"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="3dp" />
            </android.support.constraint.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="8dp">
                <co.tinab.darchin.view.toolbox.TextViewNormal
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="start|center_vertical"
                    android:textSize="@dimen/average"
                    android:textColor="@color/primaryText"
                    android:text="@string/quality_product"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical"/>
                <ProgressBar
                    android:id="@+id/progress_product_quality"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="5dp"
                    android:layout_weight="0.6"
                    android:max="5"
                    android:indeterminate="false"
                    android:layout_gravity="center_vertical"/>
                <co.tinab.darchin.view.toolbox.TextViewLight
                    android:id="@+id/txt_product_quality"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:textColor="@color/primaryText"
                    android:textSize="@dimen/average"
                    android:textDirection="ltr"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="8dp">
                <co.tinab.darchin.view.toolbox.TextViewNormal
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="start|center_vertical"
                    android:textSize="@dimen/average"
                    android:textColor="@color/primaryText"
                    android:text="@string/delivery_fast"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical"/>
                <ProgressBar
                    android:id="@+id/progress_courier_speed"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="5dp"
                    android:layout_weight="0.6"
                    android:max="5"
                    android:indeterminate="false"
                    android:layout_gravity="center_vertical"/>
                <co.tinab.darchin.view.toolbox.TextViewLight
                    android:id="@+id/txt_courier_speed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:textColor="@color/primaryText"
                    android:textSize="@dimen/average"
                    android:textDirection="ltr"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="8dp">
                <co.tinab.darchin.view.toolbox.TextViewNormal
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="start|center_vertical"
                    android:textSize="@dimen/average"
                    android:textColor="@color/primaryText"
                    android:text="@string/quality_package"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical"/>
                <ProgressBar
                    android:id="@+id/progress_packing_quality"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="5dp"
                    android:layout_weight="0.6"
                    android:max="5"
                    android:indeterminate="false"
                    android:layout_gravity="center_vertical"/>
                <co.tinab.darchin.view.toolbox.TextViewLight
                    android:id="@+id/txt_packing_quality"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:textColor="@color/primaryText"
                    android:textSize="@dimen/average"
                    android:textDirection="ltr"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="8dp">
                <co.tinab.darchin.view.toolbox.TextViewNormal
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:gravity="start|center_vertical"
                    android:textSize="@dimen/average"
                    android:textColor="@color/primaryText"
                    android:text="@string/courier"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical"/>
                <ProgressBar
                    android:id="@+id/progress_courier_ethics"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_height="5dp"
                    android:layout_weight="0.6"
                    android:max="5"
                    android:indeterminate="false"
                    android:layout_gravity="center_vertical"/>
                <co.tinab.darchin.view.toolbox.TextViewLight
                    android:id="@+id/txt_courier_ethics"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:textColor="@color/primaryText"
                    android:textSize="@dimen/average"
                    android:textDirection="ltr"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </LinearLayout>
        <co.tinab.darchin.view.toolbox.MyRecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/container_info"
            app:isNestedScrollingEnable="false"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"/>
        <co.tinab.darchin.view.component.LoadingView
            android:id="@+id/loading_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/recycler_view"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>