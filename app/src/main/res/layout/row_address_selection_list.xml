<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:padding="8dp"
    android:background="@color/fragment_bk_color">
    <RadioButton
        android:id="@+id/btn_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/MyRadioButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp" />
    <co.tinab.darchin.view.toolbox.TextViewNormal
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_radio"
        android:textDirection="locale"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/average"
        android:background="@drawable/discount_bk"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:minWidth="50dp"/>
    <co.tinab.darchin.view.toolbox.TextViewLight
        android:id="@+id/txt_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        app:layout_constraintStart_toEndOf="@id/btn_radio"
        app:layout_constraintEnd_toStartOf="@id/container_button"
        android:textDirection="locale"
        android:textAlignment="viewStart"
        android:textColor="@color/primaryText"
        android:textSize="@dimen/average"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"/>
    <LinearLayout
        android:id="@+id/container_button"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp">
        <ImageButton
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_24dp"
            android:background="@android:color/transparent"
            android:tint="@color/colorAccent"
            android:padding="8dp"
            android:layout_marginEnd="4dp"
            android:contentDescription="@drawable/ic_edit_24dp" />
        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_24dp"
            android:background="@android:color/transparent"
            android:tint="@color/colorAccent"
            android:padding="8dp"
            android:contentDescription="@drawable/ic_delete_24dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>