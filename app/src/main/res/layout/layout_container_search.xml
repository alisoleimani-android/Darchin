<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/dropshadow" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:weightSum="1"
        android:focusableInTouchMode="true">
        <co.tinab.darchin.view.toolbox.TextViewNormal
            android:id="@+id/txt_city"
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/semi_large"
            android:textColor="@color/colorAccent"
            android:layout_gravity="start|center_vertical"
            android:gravity="center" />
        <co.tinab.darchin.view.toolbox.EditTextLight
            android:id="@+id/txt_input_search"
            android:inputType="textPersonName"
            android:gravity="center"
            android:hint="@string/hint_search"
            android:textColorHint="@color/textOnPrimary"
            android:textColor="@color/primaryText"
            android:textSize="@dimen/semi_large"
            android:layout_weight="0.6"
            android:padding="3dp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:nextFocusUp="@id/txt_input_search"
            android:nextFocusLeft="@id/txt_input_search"
            android:imeOptions="actionSearch"/>
        <ImageButton
            android:id="@+id/btn_search"
            android:layout_weight="0.2"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/ic_search_24dp"
            android:tint="@color/colorAccent"
            android:background="@android:color/transparent"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>