<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginTop="8dp">
        <co.tinab.darchin.view.toolbox.TextViewLight
            android:id="@+id/label_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/total"
            android:textSize="@dimen/average"
            android:textColor="@color/primaryText"
            android:textDirection="locale"
            android:layout_margin="4dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/semi_white"
            android:layout_toEndOf="@id/label_total"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/txt_total"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>
        <co.tinab.darchin.view.toolbox.MoneyTextView
            android:id="@+id/txt_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/average"
            android:textColor="@color/primaryText"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">
        <co.tinab.darchin.view.toolbox.TextViewLight
            android:id="@+id/label_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/discount"
            android:textSize="@dimen/average"
            android:textColor="@color/primaryText"
            android:textDirection="locale"
            android:layout_margin="4dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/semi_white"
            android:layout_toEndOf="@id/label_discount"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/txt_discount"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>
        <co.tinab.darchin.view.toolbox.MoneyTextView
            android:id="@+id/txt_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/average"
            android:textColor="@color/primaryText"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">
        <co.tinab.darchin.view.toolbox.TextViewLight
            android:id="@+id/label_packaging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/packing"
            android:textSize="@dimen/average"
            android:textColor="@color/primaryText"
            android:textDirection="locale"
            android:layout_margin="4dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/semi_white"
            android:layout_toEndOf="@id/label_packaging"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/txt_packing"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>
        <co.tinab.darchin.view.toolbox.MoneyTextView
            android:id="@+id/txt_packing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/average"
            android:textColor="@color/primaryText"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">
        <co.tinab.darchin.view.toolbox.TextViewLight
            android:id="@+id/label_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/average"
            android:text="@string/delivery"
            android:textColor="@color/primaryText"
            android:textDirection="locale"
            android:layout_margin="4dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/semi_white"
            android:layout_toEndOf="@id/label_delivery"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/txt_delivery"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>
        <co.tinab.darchin.view.toolbox.MoneyTextView
            android:id="@+id/txt_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/average"
            android:textColor="@color/primaryText"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">
        <co.tinab.darchin.view.toolbox.TextViewLight
            android:id="@+id/label_tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/average"
            android:text="@string/tax"
            android:textColor="@color/primaryText"
            android:textDirection="locale"
            android:layout_margin="4dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/semi_white"
            android:layout_toEndOf="@id/label_tax"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/txt_tax"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>
        <co.tinab.darchin.view.toolbox.MoneyTextView
            android:id="@+id/txt_tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/average"
            android:textColor="@color/primaryText"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginBottom="8dp">
        <co.tinab.darchin.view.toolbox.TextViewLight
            android:id="@+id/label_sum_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/average"
            android:text="@string/sum_total"
            android:textColor="@color/primaryText"
            android:textDirection="locale"
            android:layout_margin="4dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/semi_white"
            android:layout_toEndOf="@id/label_sum_total"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/txt_sum_total"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>
        <co.tinab.darchin.view.toolbox.MoneyTextView
            android:id="@+id/txt_sum_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/average"
            android:textColor="@color/primaryText"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"/>
    </RelativeLayout>

</LinearLayout>