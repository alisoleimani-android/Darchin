<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/MyCardViewStyle"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="@dimen/section_top_margin"
    android:layout_marginBottom="@dimen/section_bottom_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <co.tinab.darchin.view.toolbox.TextViewBold
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textDirection="locale"
            android:textSize="@dimen/huge"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="8dp"/>
        <co.tinab.darchin.view.toolbox.TextViewLight
            android:id="@+id/txt_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="@color/primaryText"
            android:textSize="@dimen/semi_large"
            android:textDirection="locale"
            android:textAlignment="center"/>
        <co.tinab.darchin.view.toolbox.ButtonBold
            android:id="@+id/btn_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/_35sdp"
            android:minWidth="@dimen/_130sdp"
            android:layout_gravity="center_horizontal"
            android:textDirection="locale"
            android:textAlignment="center"
            android:textSize="@dimen/semi_large"
            android:layout_marginTop="16dp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:paddingStart="@dimen/_4sdp"
            android:paddingEnd="@dimen/_4sdp"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</android.support.v7.widget.CardView>