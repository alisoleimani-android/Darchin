<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryLight</item>
    </style>

    <style name="MainTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MainTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layoutDirection">locale</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="ChildTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/ChildTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/primaryText</item>
        <item name="android:background">@drawable/child_tablayout_background</item>
        <item name="android:layoutDirection">locale</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="MyButton">
        <item name="android:textColor">@color/textOnSecondary</item>
        <item name="android:textSize">@dimen/very_large</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
    </style>

    <!--style for title of list-->
    <style name="TitleOfListStyle" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/semi_large</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:gravity">end|center_vertical</item>
    </style>

    <style name="MainTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="ChildTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/semi_white</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/semi_white</item>
        <item name="colorControlActivated">@color/stars</item>
    </style>

    <style name="MyCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">3dp</item>
        <item name="contentPaddingBottom">10dp</item>
        <item name="contentPaddingTop">10dp</item>
        <item name="contentPaddingLeft">5dp</item>
        <item name="contentPaddingRight">5dp</item>
        <item name="cardBackgroundColor">@color/fragment_bk_color</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="CommentProductsCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">3dp</item>
        <item name="contentPaddingBottom">4dp</item>
        <item name="contentPaddingTop">4dp</item>
        <item name="contentPaddingLeft">6dp</item>
        <item name="contentPaddingRight">6dp</item>
        <item name="cardBackgroundColor">@color/comment_product</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="EventCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">3dp</item>
        <item name="contentPaddingBottom">0dp</item>
        <item name="contentPaddingTop">0dp</item>
        <item name="contentPaddingLeft">0dp</item>
        <item name="contentPaddingRight">0dp</item>
        <item name="cardBackgroundColor">@color/fragment_bk_color</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="HorizontalCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">3dp</item>
        <item name="contentPaddingBottom">8dp</item>
        <item name="contentPaddingTop">3dp</item>
        <item name="contentPaddingLeft">3dp</item>
        <item name="contentPaddingRight">3dp</item>
        <item name="cardBackgroundColor">@color/fragment_bk_color</item>
    </style>

    <style name="HorizontalPictureCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardElevation">3dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="CardViewInfoStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">5dp</item>
        <item name="contentPaddingBottom">24dp</item>
        <item name="contentPaddingTop">24dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
    </style>

    <!--dialog style-->
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/primaryText</item>
        <item name="android:background">@color/fragment_bk_color</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--dialog background-->
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/secondaryText</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="MyScrollBar">
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarThumbVertical">@color/colorAccent</item>
        <item name="android:scrollbarTrackVertical">@color/scrollbar_track_color</item>
        <item name="android:scrollbarSize">2dp</item>
        <item name="android:scrollbarFadeDuration">500</item>
        <item name="android:scrollbarDefaultDelayBeforeFade">500</item>
    </style>
    
    <style name="MyToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

</resources>
